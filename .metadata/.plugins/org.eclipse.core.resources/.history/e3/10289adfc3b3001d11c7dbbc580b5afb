package com.banco.projeto.testeturing.services;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.banco.projeto.testeturing.projections.AccountProjection;
import com.banco.projeto.testeturing.repositories.AccountRepository;

@Service
public class AccountService {

	@Autowired
	private AccountRepository repository;
	
	public int accountValidation(int account) {
		AccountProjection obj = repository.findUserAccount(account);
		return obj.getNumeroConta();
		
	}
}
